<Window x:Class="CodeTester.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeTester"
        mc:Ignorable="d"
        Title="InputWindow" SizeToContent="Height" Width="300">
    <StackPanel>
        <TextBlock Text="Enter value for " Margin="10,10,10,0"/>
        <TextBlock x:Name="txtName" Text="" Margin="10,5,10,0"/>
        <TextBox x:Name="txtValue" Margin="10"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnCancel" Margin="10,10,5,10" Content="Cancel" Height="25" Click="BtnCancel_Click"/>
            <Button x:Name="btnConf" Margin="5,10,10,10" Grid.Column="1" Content="Confirm"  Height="25" Click="BtnConf_Click"/>
        </Grid>
    </StackPanel>
</Window>
