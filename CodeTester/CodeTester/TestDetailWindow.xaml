<Window x:Class="CodeTester.TestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeTester"
        mc:Ignorable="d"
        Title="{Binding Name}" Height="800" Width="800" DataContext="{Binding}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Margin="10" Header="Input">
            <TextBox AcceptsReturn="True" TextWrapping="NoWrap" Text="{Binding Input.Content}" Grid.Row="1" Margin="5"/>
        </GroupBox>
        <GroupBox Margin="10" Header="Answer" Grid.Column="1">
            <TextBox AcceptsReturn="True" TextWrapping="NoWrap" Text="{Binding Answer.Content}" Grid.Row="1" Margin="5"/>
        </GroupBox>
    </Grid>
</Window>
