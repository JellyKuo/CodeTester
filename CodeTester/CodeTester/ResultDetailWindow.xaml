<Window x:Class="NPSC.ResultDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPSC"
        mc:Ignorable="d"
        Title="{Binding Test.Name}" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Margin="10" Header="Input">
            <TextBox AcceptsReturn="True" TextWrapping="NoWrap" Text="{Binding Test.Input.Content}" Grid.Row="1" Margin="5"/>
        </GroupBox>
        <GroupBox Margin="10" Header="Answer" Grid.Column="1">
            <TextBox AcceptsReturn="True" TextWrapping="NoWrap" Text="{Binding Test.Answer.Content}" Grid.Row="1" Margin="5"/>
        </GroupBox>
        <GroupBox Margin="10" Header="Output" Grid.Column="2">
            <TextBox AcceptsReturn="True" TextWrapping="NoWrap" Text="{Binding Output}" Grid.Row="1" Margin="5"/>
        </GroupBox>
    </Grid>
</Window>
